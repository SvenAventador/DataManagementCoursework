<Page x:Class="ShopsGoodsProject.Windows.Manager.Pages.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopsGoodsProject.Windows.Manager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Users">
    <Grid>
        <DataGrid AutoGenerateColumns="False"
                  IsReadOnly="True" 
                  Name="UsersGridModel">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" 
                            Binding="{Binding Id}"
                            Width="*" />
                <DataGridTextColumn Header="ФИО" 
                            Binding="{Binding UserFio}"
                            Width="*" />
                <DataGridTextColumn Header="Дата Рождения" 
                            Binding="{Binding UserBirthday}"
                            Width="*" />
                <DataGridTextColumn Header="Электронная почта" 
                            Binding="{Binding UserEmail}"
                            Width="*" />
                <DataGridTextColumn Header="Телефон" 
                            Binding="{Binding UserPhone}"
                            Width="*" />
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="SeeOrder"                          
                                        BorderThickness="0"
                                        Content="Просмотреть заказы"
                                        Foreground="White"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Cursor="Hand"                           
                                        Click="SeeOrder_Click"
                                        Tag="{Binding Id}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" 
                                                    Value="#462AD8" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" 
                                                         Value="True">
                                                    <Setter Property="Background" 
                                                            Value="#28AEED" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Width="150" 
                                                    Height="40"
                                                    CornerRadius="20"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
